@model QuestionViewModel

@{
    ViewData["Title"] = "Вопрос";
}

<h2>@Model.Text</h2>

<form asp-action="Answer" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div>

            <button type="submit" name="selectedAnswerIndex" value="@i">@Model.Options[i]</button>
            <br />
            <br />
        </div>

    }

    @if (!string.IsNullOrEmpty(ViewBag.Explanation))
    {
        <p>Пояснение: @ViewBag.Explanation</p>
        <p>Правильный ответ: @(Model.CorrectAnswerIndex + 1)</p>
    }

