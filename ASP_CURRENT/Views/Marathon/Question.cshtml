@model QuestionViewModel

@{
    ViewData["Title"] = "Вопрос";
}


<h2>@Model.Text</h2>

    <form asp-action="Answer" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
    @for (int i = 0; i < Model.Options.Count; i++)
    {
                <div>

                    <button type="submit" name="selectedAnswerIndex" value="@i">@Model.Options[i]</button>
                    <br />
                <br />
                </div>

    }

        <div class="text-right">
            <a role="button" class="btn btn-secondary btn-lg mx-2" asp-controller="Marathon" asp-action="Explanation" title="Пояснение к вопросу" style="font-weight: bold; font-size: 24px;">?</a>
        </div>


        <a role="button" class="btn btn-secondary btn-lg mx-2" asp-controller="Home" asp-action="Index">Завершить Марафон</a>

    </form>


